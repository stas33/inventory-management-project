pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'test1', url: 'https://github.com/stas33/inventory-management-project.git'

            }
        }
        stage('Test') {
            steps {
                sh '''
                    python3 -m venv env
                    source env/bin/activate
                    pip install -r requirements.txt
                    cp inventoryproject/.env.example inventoryproject/.env
                    ./manage.py test companies'''
            }
        }

        stage('Docker build & push image') {
            environment {
                IMAGE='stas33/django'
                DOCKER_USERNAME='stas33'
                DOCKER_PASSWORD=credentials('docker-passwd')
            }
            steps {
                sh '''
                echo $BUILD_ID
                COMMIT_ID=$(git rev-parse --short HEAD)
                echo $COMMIT_ID
                TAG=$COMMIT_ID-$BUILD_ID
                docker build -t $IMAGE -t $IMAGE:$TAG .
                docker login -u="$DOCKER_USERNAME" -p="$DOCKER_PASSWORD"
                docker push $IMAGE --all-tags
                '''
            }
        }

        stage('Deploy to K8s') {
            steps {
                sh '''
                kubectl get pods
                '''
            }
        }
    }
}